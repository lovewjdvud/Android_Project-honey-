<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ly_login_framelayout"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_j.Login_s">
    <!--   로그인 시작 -->
    <LinearLayout
        android:id="@+id/login_linearlayout"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="꿀 재료"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_marginBottom="10dp"
            />

        <!--   로그인 id -->
        <EditText
            android:id="@+id/login_edit_id"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="ID"
            />
        <!--   로그인 pw -->
        <EditText
            android:id="@+id/login_edit_pw"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="pw"

            />
        <!--   로그인 버튼 -->

        <Button
            android:id="@+id/login_btn_justlogin"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="로그인"


            android:backgroundTint="#FF9800"/>




        <!--   아이디 찾기,비밀번호찾기 시작 -->
         <LinearLayout
             android:gravity="center"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

        <TextView
            android:id="@+id/login_id_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디 찾기"
            android:layout_marginRight="10dp"
            />

             <TextView
                 android:id="@+id/login_pw_find"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="비밀번호 찾기"/>
         </LinearLayout>
        <!--   아이디 찾기 비밀번호찾기 끝 -->




    <!--   카카오 로그인, 구글 로그인 시작-->
    <LinearLayout
        android:id="@+id/kaka"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--  구글 로그인 시작-->
        <com.google.android.gms.common.SignInButton
            android:id="@+id/login_btn_google"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#4C4B4B"/>





        <!--  카카오 로그인 시작-->
        <com.kakao.usermgmt.LoginButton
           android:layout_marginTop="10dp"
            android:id="@+id/kakao_login_btn"
        android:layout_width="250dp"
        android:layout_height="45dp"/>





        </LinearLayout>
            <!--   카카오 로그인, 구글 로그인 끝 -->

        <!-- 회원가입 시작 -->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="꿀 재료에 처음 오시는 건가요?"/>

        <TextView
            android:id="@+id/login_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF9800"
            android:text="회원가입"/>

    </LinearLayout>
        <!-- 회원가입 끝 -->

    </LinearLayout>
    <!--   로그인 끝 -->
</FrameLayout>